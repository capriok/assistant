# Text-to-speech rate used by assistant.ts
TTS_RATE=240

# Text-to-speech voice used by assistant.ts (macOS `say` voice)
TTS_VOICE=Moira

# Optional wake acknowledgement spoken asynchronously (set empty to disable)
WAKE_ACK_TEXT=hello

# Whisper model path used by assistant.ts
WHISPER_MODEL=./packages/whisper.cpp/models/ggml-base.en.bin

# Set to 1 to force CPU for whisper-cli (helps if Metal init fails)
WHISPER_NO_GPU=0

# llama.cpp server model source (override if you want a different model)
LLAMA_HF_REPO=bartowski/Qwen2.5-14B-Instruct-GGUF:Q4_K_M
LLAMA_HF_FILE=

# Safer defaults for local GPU memory
LLAMA_CTX_SIZE=2048
LLAMA_GPU_LAYERS=48
LLAMA_NO_WARMUP=1

# OpenAI API key used by lookup tool for web search-backed answers
OPENAI_API_KEY=

# Optional model override for lookup tool
OPENAI_LOOKUP_MODEL=gpt-4.1-mini

# Voice capture timeouts (milliseconds)
# No-speech timeout: abort if you never start speaking
COMMAND_NO_SPEECH_TIMEOUT_MS=8000
INTERRUPT_NO_SPEECH_TIMEOUT_MS=5000

# End-of-utterance timeout: stop after this much silence once you've started speaking
COMMAND_END_SILENCE_MS=1200
INTERRUPT_END_SILENCE_MS=900

# Hard cap on capture duration so noisy rooms can't hold the recorder open forever
COMMAND_MAX_CAPTURE_MS=12000
INTERRUPT_MAX_CAPTURE_MS=8000

# sox silence gate level used to detect speech and end of speech.
# Higher values are less sensitive (better for noisy rooms), lower values are more sensitive.
COMMAND_SILENCE_LEVEL=2.0%
INTERRUPT_SILENCE_LEVEL=2.5%
